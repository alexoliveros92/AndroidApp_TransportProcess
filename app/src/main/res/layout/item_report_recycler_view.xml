<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/report_title"
        style="@style/Request1"
        tools:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/report_date"
        style="@style/time"
        android:paddingStart="5dp"
        android:layout_below="@+id/report_title"
        tools:text="02-02-2020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/report_timeD"
        style="@style/time"
        tools:text="08:00:00"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_date"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/report_timeO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/time"
        android:paddingEnd="5dp"
        android:layout_alignParentEnd="true"
        tools:text="00:00:00"
        android:layout_above="@+id/report_timeD"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/report_line"
        style="@style/Request3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_date"
        android:text="@string/line_one" />

</RelativeLayout>
