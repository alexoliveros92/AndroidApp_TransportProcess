<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/toolBar"
        android:id="@+id/mainSausage_toolbar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="@string/subCategory2_name"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/mainSausage_toolbar"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabTextColor="#ffe0b2"
        app:tabSelectedTextColor="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/white"
        android:id="@+id/tabLayoutSausage_id">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerSausage_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayoutSausage_id">

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoRequestListSausage"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_assignment_black_24dp"
        />
</RelativeLayout>