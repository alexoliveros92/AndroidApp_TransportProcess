<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:id="@+id/requestRootView"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/text_request_container"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            style="@style/Request1"/>
        <TextView
            android:id="@+id/request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/request_line"
            tools:text="08:00:00"
            style="@style/time"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageStateId"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reasonTxt"
            android:layout_below="@+id/request_title"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/request_title"
            android:layout_height="wrap_content"
            android:id="@+id/txtLine"
            android:text="Line:"
            style="@style/Request3"/>
        <TextView
            android:id="@+id/request_line"
            android:layout_below="@+id/request_title"
            android:layout_toRightOf="@id/txtLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="line"
            style="@style/Request3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLine"
            android:id="@+id/txtPlace"
            android:text="Position:"
            style="@style/Request3"/>
        <TextView
            android:id="@+id/request_place"
            android:layout_width="wrap_content"
            android:layout_below="@+id/request_line"
            android:layout_toRightOf="@+id/txtPlace"
            android:layout_height="wrap_content"
            tools:text="position"
            style="@style/Request3"/>

    </RelativeLayout>
</LinearLayout>