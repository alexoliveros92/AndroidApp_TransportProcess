<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/storeHouseRootView"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/text_store_container"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            style="@style/Request1"/>
        <TextView
            android:id="@+id/storehouse_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/store_noOrder"
            tools:text="08:00:00"
            style="@style/time"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/storehouseImageStateId"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/store_title"
            android:layout_height="wrap_content"
            android:id="@+id/txtLine1"
            android:text="Line:"
            style="@style/Request3"/>
        <TextView
            android:id="@+id/store_line"
            android:layout_below="@+id/store_title"
            android:layout_toRightOf="@id/txtLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="line"
            style="@style/Request3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNoOrder1"
            android:id="@+id/txtPlace1"
            android:text="Position:"
            style="@style/Request3"/>
        <TextView
            android:id="@+id/store_place"
            android:layout_width="wrap_content"
            android:layout_below="@+id/store_noOrder"
            android:layout_toRightOf="@+id/txtPlace1"
            android:layout_height="wrap_content"
            tools:text="position"
            style="@style/Request3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLine1"
            android:id="@+id/txtNoOrder1"
            android:text="No order:"
            style="@style/Request3"/>
        <TextView
            android:id="@+id/store_noOrder"
            android:layout_width="wrap_content"
            android:layout_below="@+id/store_line"
            android:layout_toRightOf="@+id/txtNoOrder1"
            android:layout_height="wrap_content"
            tools:text="no order"
            style="@style/Request3"/>

    </RelativeLayout>
</LinearLayout>